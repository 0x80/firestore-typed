{
  "name": "@typed-firestore/server",
  "version": "1.0.0-0",
  "description": "Elegant, strongly-typed abstractions for Firestore in server environments",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/typed-firestore"
  },
  "keywords": [
    "firestore",
    "typescript",
    "server",
    "firebase",
    "admin",
    "firebase-admin"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint .",
    "compile": "tsc --noEmit",
    "build": "tsup-node && tsc --emitDeclarationOnly && tsc-alias --verbose",
    "clean": "del-cli dist tsconfig.tsbuildinfo",
    "test": "echo \"No test specified\"",
    "prepare": "pnpm clean && pnpm build",
    "prettier:format": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "author": "Thijs Koerselman",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@codecompose/typescript-config": "^1.2.0",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-0x80": "^0.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "firebase-admin": ">=10.0"
  },
  "packageManager": "pnpm@9.0.5+sha256.61bd66913b52012107ec25a6ee4d6a161021ab99e04f6acee3aa50d0e34b4af9"
}
